<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size150dp"
        android:background="@drawable/bg_navigation">

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cvGioHang"
        android:layout_width="@dimen/size300dp"
        android:layout_height="@dimen/size510dp"
        android:layout_marginTop="@dimen/size40dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="@dimen/size2dp"
        app:cardElevation="@dimen/size5dp">

        <ImageView
            android:layout_width="@dimen/size25dp"
            android:layout_height="@dimen/size25dp"
            android:layout_marginTop="@dimen/size10dp"
            android:src="@drawable/logolechef"
            android:layout_marginLeft="@dimen/size240dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size20dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/tvDanhSachLoaiThucDon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size10dp"
                android:text="@string/danhsachmonan"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textSize="@dimen/size18sp"/>

            <TextView
                android:id="@+id/tvLeChefRestaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size10dp"
                android:layout_below="@+id/tvDanhSachLoaiThucDon"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/nhahangphap"
                android:textSize="@dimen/size13sp" />

            <View
                android:layout_below="@+id/tvLeChefRestaurant"
                android:id="@+id/tvmins"
                android:layout_width="@dimen/size75dp"
                android:layout_height="@dimen/size2dp"
                android:layout_marginTop="2dp"
                android:layout_centerHorizontal="true"
                android:background="@color/darkgray"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/size110dp">

            <Button
                android:id="@+id/btnGoiMon"
                android:layout_width="@dimen/size150dp"
                android:layout_height="@dimen/size30dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/line_gray"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/goimon"
                android:textSize="@dimen/size13sp"
                android:textColor="@color/darkgray"/>

            <ListView
                android:layout_below="@+id/btnGoiMon"
                android:id="@+id/listViewHienThiMonAnGioHang"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size270dp"
                android:layout_marginLeft="@dimen/size10dp"
                android:layout_marginRight="@dimen/size10dp"
                android:layout_marginTop="@dimen/size15dp"
                android:numColumns="3">
            </ListView>

            <ImageButton
                android:layout_below="@+id/listViewHienThiMonAnGioHang"
                android:id="@+id/btnThanhToan"
                android:layout_width="@dimen/size50dp"
                android:layout_height="@dimen/size50dp"
                android:layout_marginTop="@dimen/size15dp"
                android:layout_centerHorizontal="true"
                android:background="@color/transparent"
                android:src="@drawable/ic_paymment"
                android:scaleType="centerCrop"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>