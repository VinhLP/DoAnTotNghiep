<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:id="@+id/cvBanAn"
        android:layout_width="@dimen/size110dp"
        android:layout_height="@dimen/size140dp"
        android:layout_marginTop="@dimen/size10dp"
        android:layout_centerInParent="true"
        app:cardElevation="@dimen/size4dp"
        app:cardCornerRadius="@dimen/size10dp">

        <TextView
            android:id="@+id/tvTenBanAn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size15dp"
            android:text="@string/tenbanan"
            android:textSize="@dimen/size12sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/imChuaGoiMon"
            android:layout_width="@dimen/size60dp"
            android:layout_height="@dimen/size60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size45dp"
            android:src="@drawable/ic_banan_chuagoimon"/>

    </android.support.v7.widget.CardView>

</RelativeLayout>